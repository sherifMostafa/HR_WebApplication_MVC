@model MVCTaskP.Models.VacencySetting
@{
    ViewBag.Title = "Emergencyleave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Emergency Vacation</h3></div>
                <div class="card-body">

                    @using (Html.BeginForm("Emergencyleave", "EmergencyVanacy"))
                    {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            @Html.Label("Choose Employee")
                            @Html.DropDownListFor(m => m.Emp_Id, ViewBag.Employees as SelectList, "-- Select --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Emp_Id)
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(n => n.Date)
                            @*@Html.TextBoxFor(n => n.Atendance.ToString(), new { @class = "form-control" })*@
                            <input type="date" name="Date" class="form-control" />
                            @*@Html.TextBoxFor(n => n.Atendance.ToString(), new { @class = "form-control" })*@
                            @Html.ValidationMessageFor(n => n.Date)
                        </div>
                    </div>
                        <div class="row mb-3">
                            
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    @Html.Label("Reason")
                                    @*@Html.TextBoxFor(n => n.Atendance.ToString(), new { @class = "form-control" })*@
                                    <input type="text" name="Name" class="form-control" />
                                    @*@Html.TextBoxFor(n => n.Atendance.ToString(), new { @class = "form-control" })*@
                                    @Html.ValidationMessageFor(n => n.Name)
                                </div>
                            </div>

                        </div>
                        <h5 class="text-danger">@ViewBag.Error</h5>
                        <input type="submit" value="Add" class="btn btn-primary" />

                    }

                </div>
            </div>
        </div>
    </div>
</div>

