@model MVCTaskP.Models.Employee
@{
    ViewBag.Title = "addEmp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Add Employee</h3></div>
                <div class="card-body">

                    @using (Html.BeginForm("addEmp", "Employee"))
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                @Html.LabelFor(n => n.Name)
                                @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(n => n.Name)
                            </div>
                            <div class="col-md-6">

                                @Html.LabelFor(n => n.Salary)
                                @Html.TextBoxFor(n => n.Salary, new { @class = "form-control" })
                                @Html.ValidationMessageFor(n => n.Salary)
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                @Html.LabelFor(n => n.Atendance)
                                @*@Html.TextBoxFor(n => n.Atendance.ToString(), new { @class = "form-control" })*@
                                <input type="time" name="Atendance" class="form-control" />
                                @*@Html.TextBoxFor(n => n.Atendance.ToString(), new { @class = "form-control" })*@
                                @Html.ValidationMessageFor(n => n.Atendance)
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(n => n.Leave)
                                @*@Html.TextBoxFor(n => n.Atendance.ToString(), new { @class = "form-control" })*@
                                <input type="time" name="Leave" class="form-control" />
                                @*@Html.TextBoxFor(n => n.Atendance.ToString(), new { @class = "form-control" })*@
                                @Html.ValidationMessageFor(n => n.Leave)
                                @*@Html.LabelFor(n => n.Leave)
                                  @Html.TextBoxFor(n => n.Leave.ToString("hh:mm"), new { @class = "form-control" })
                                  @Html.ValidationMessageFor(n => n.Leave)*@
                            </div>
                        </div>
                        <h5 class="text-danger">@ViewBag.Error</h5>
                        <input type="submit" value="Add" class="btn btn-primary" />
                    }
                </div>

            </div>
        </div>
    </div>
</div>

