@model MVCTaskP.Models.User
@{
    ViewBag.Title = "edite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Edite</h3></div>
                <div class="card-body">

                    @using (Html.BeginForm("edite", "User"))
                    {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            @Html.LabelFor(n => n.Name)
                            @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(n => n.Name)
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(n => n.age)
                            @Html.TextBoxFor(n => n.age, new { @class = "form-control" })
                            @Html.ValidationMessageFor(n => n.age)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Choose Group")
                            @Html.DropDownListFor(m => m.roleId, (SelectList)ViewBag.roles, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.roleId)
                        </div>
                    </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                @Html.LabelFor(n => n.UserName)
                                @Html.TextBoxFor(n => n.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(n => n.UserName)
                            </div>
                        </div>
                        <input type="hidden" value="@Model.Id" name="id" />
                        <input type="submit" value="Edite" class="btn btn-primary" />
                        <a class="btn btn-primary" href="/User"> Cancel </a>
                    }

                </div>

            </div>
        </div>
    </div>
</div>

